<BoxMain>
    button_refresh: button_refresh
    button_bottomtop: button_bottomtop
    checkbox_auto: checkbox_auto
    scrollview_streams: scrollview_streams
    grid_streams: grid_streams
    orientation: 'vertical'
    padding: 5, 5, 5, 5
    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_height: True
        spacing: 10
        Widget:
        MDIconButton:
            icon: "logout"
            on_release: app.root.logout()
        MDIconButton:
            id: button_refresh
            icon: "refresh"
            on_release: app.root.refresh_streams_on()
        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_width: True
            MDLabel:
                text: 'Auto: '
                font_size: 18
                theme_text_color: "Primary"
                # adaptive_width: True
                size: self.texture_size
            CheckBox:
                id: checkbox_auto
                adaptive_width: True
                active: True
        MDIconButton:
            id: button_bottomtop
            icon: "arrow-up-down-bold-outline"
        MDIconButton:
            icon: "theme-light-dark"
            on_release: app.toggle_theme()


    ScrollView:
        id: scrollview_streams
        scroll_wheel_distance: 50
        # scroll_type: ['bars', 'content']

        MDGridLayout:
            id: grid_streams
            orientation: "lr-tb"
            size_hint_y: None
            height: self.minimum_height
            spacing: 15
            padding: 10, 10, 10, 10
            cols: 3
